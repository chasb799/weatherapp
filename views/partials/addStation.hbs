<form action="/dashboard/addStation" method="POST">
    <div class="row">
        <div class="mb-3 col-4">
            <label htmlFor="inputName" className="form-label" style="display: flex; flex-direction: column;">Name Wetterstation</label>
            <input type="text" placeholder="Name" className="form-control" id="inputName" name="name" style="display: flex; flex-direction: column;">
        </div>
        <div class="mb-3 col-4">
            <label htmlFor="inputLat" className="form-label" style="display: flex; flex-direction: column;">Breitengrad</label>
            <input type="number" placeholder="Breitengrad" step="any" className="form-control" id="inputLat" name="lat" min="-90" max="90" style="-moz-appearance: textfield; display: flex; flex-direction: column;">
        </div>
        <div class="mb-3 col-4">
            <label htmlFor="inputLon" className="form-label" style="display: flex; flex-direction: column;">Längengrad</label>
            <input type="number" placeholder="Längengrad" step="any" className="form-control" id="inputLon" name="lon" min="-180" max="180" style="-moz-appearance: textfield; display: flex; flex-direction: column;">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Station hinzufügen</button>
</form>