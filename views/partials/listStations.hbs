<div class="container">
    {{#each stations}}
        <div class="row">
            <div class="col-sm">
                <div class="card text-white bg-dark mb-10 h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{this.station_name}}</h5>
                        <h6 class="card-text">Lat: {{this.lat}}</h6>
                        <h6 class="card-text">Lon: {{this.lon}}</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card text-white bg-dark mb-10 h-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Wetter</h5>
                            </div>
                            <div class="col" style="color: cornflowerblue; font-size: 24px; margin-left: 80px;">
                                <i class="{{this.currWeather.wetter.icon}}"></i>
                            </div>
                        </div>
                        <h6 class="card-text">{{this.currWeather.wetter.text}}</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card text-white bg-dark mb-10 h-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Temperatur</h5>
                            </div>
                            <div class="col" style="color: grey; margin-left: 40px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-thermometer" viewBox="0 0 16 16">
                                    <path d="M8 14a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                                    <path d="M8 0a2.5 2.5 0 0 0-2.5 2.5v7.55a3.5 3.5 0 1 0 5 0V2.5A2.5 2.5 0 0 0 8 0zM6.5 2.5a1.5 1.5 0 1 1 3 0v7.987l.167.15a2.5 2.5 0 1 1-3.333 0l.166-.15V2.5z"/>
                                </svg>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col" style="white-space: nowrap">
                                <h6 class="card-text">{{this.currWeather.temperatur.value}}</h6>
                            </div>
                            <div class="col" style="color: grey; font-size: 24px; margin-left: 65px;">
                                <i class="{{this.currWeather.temperatur.trend}}"></i>
                            </div>
                        </div>
                        <h6 class="card-text">Max: {{this.maxValues.max_temperatur}}</h6>
                        <h6 class="card-text">Min: {{this.minValues.min_temperatur}}</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card text-white bg-dark mb-10 h-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Wind</h5>
                            </div>
                            <div class="col" style="color: green; margin-left: 90px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-wind" viewBox="0 0 16 16">
                                    <path d="M12.5 2A2.5 2.5 0 0 0 10 4.5a.5.5 0 0 1-1 0A3.5 3.5 0 1 1 12.5 8H.5a.5.5 0 0 1 0-1h12a2.5 2.5 0 0 0 0-5zm-7 1a1 1 0 0 0-1 1 .5.5 0 0 1-1 0 2 2 0 1 1 2 2h-5a.5.5 0 0 1 0-1h5a1 1 0 0 0 0-2zM0 9.5A.5.5 0 0 1 .5 9h10.042a3 3 0 1 1-3 3 .5.5 0 0 1 1 0 2 2 0 1 0 2-2H.5a.5.5 0 0 1-.5-.5z"/>
                                </svg>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col" style="white-space: nowrap">
                                <h6 class="card-text">{{this.currWeather.wind.value}}</h6>
                            </div>
                            <div class="col" style="color: green; font-size: 24px; margin-left: 75px;">
                                <i class="{{this.currWeather.wind.trend}}"></i>
                            </div>
                        </div>
                        <h6 class="card-text">{{this.currWeather.windrichtung}}</h6>
                        <h6 class="card-text">Max: {{this.maxValues.max_wind}}</h6>
                        <h6 class="card-text">Min: {{this.minValues.min_wind}}</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card text-white bg-dark mb-10 h-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">Luftdruck</h5>
                            </div>
                            <div class="col" style="color: yellow; margin-left: 60px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-speedometer" viewBox="0 0 16 16">
                                    <path d="M8 2a.5.5 0 0 1 .5.5V4a.5.5 0 0 1-1 0V2.5A.5.5 0 0 1 8 2zM3.732 3.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707zM2 8a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8zm9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5zm.754-4.246a.389.389 0 0 0-.527-.02L7.547 7.31A.91.91 0 1 0 8.85 8.569l3.434-4.297a.389.389 0 0 0-.029-.518z"/>
                                    <path fill-rule="evenodd" d="M6.664 15.889A8 8 0 1 1 9.336.11a8 8 0 0 1-2.672 15.78zm-4.665-4.283A11.945 11.945 0 0 1 8 10c2.186 0 4.236.585 6.001 1.606a7 7 0 1 0-12.002 0z"/>
                                </svg>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col" style="white-space: nowrap">
                                <h6 class="card-text">{{this.currWeather.luftdruck.value}}</h6>
                            </div>
                            <div class="col" style="color: yellow; font-size: 24px; margin-left: 75px;">
                                <i class="{{this.currWeather.luftdruck.trend}}"></i>
                            </div>
                        </div>
                        <h6 class="card-text">Max: {{this.maxValues.max_luftdruck}}</h6>
                        <h6 class="card-text">Min: {{this.minValues.min_luftdruck}}</h6>
                    </div>
                </div>
            </div>

            <div class="container">
                <div style="float: left; width: 10px; margin-top: 15px; margin-bottom: 10px; margin-right: 10px;">
                    <a href="/station/{{this.id}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder" viewBox="0 0 16 16">
                            <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a1.99 1.99 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4H2.19zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139C1.72 3.042 1.95 3 2.19 3h5.396l-.707-.707z"/>
                        </svg>
                    </a>
                </div>

                <div style="float: left; width: 10px; margin-top: 15px; margin-bottom: 10px;">
                    <a href="/dashboard/deletestation/{{this.id}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    </a>
                </div>
            </div>

            <hr>
        </div>
    {{/each}}
</div>